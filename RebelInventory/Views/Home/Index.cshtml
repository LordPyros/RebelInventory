@{
    ViewData["Title"] = "Rebel Inventory";
}

<h3> @ViewData["Title"]</h3>

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col">
        <a asp-controller="Inventory" asp-action="Index">
            <div class="demo-card-square mdl-card mdl-shadow--2dp">
                <div class="mdl-card__title mdl-card--expand" id="inventory">
                    <h2 class="mdl-card__title-text homeLabel">Inventory List</h2>
                </div>                
            </div>
        </a>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <a asp-controller="Location" asp-action="Index">
            <div class="demo-card-square mdl-card mdl-shadow--2dp">
                <div class="mdl-card__title mdl-card--expand" id="locations">
                    <h2 class="mdl-card__title-text homeLabel">Storage Locations</h2>
                </div>
            </div>
        </a>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <a asp-controller="Equipment" asp-action="Index">
            <div class="demo-card-square mdl-card mdl-shadow--2dp">
                <div class="mdl-card__title mdl-card--expand" id="equipment">
                    <h2 class="mdl-card__title-text homeLabel">Equipment</h2>
                </div>                
            </div>
        </a>
    </div>
</div>